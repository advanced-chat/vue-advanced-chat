{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    ".storybook/**/*.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "noEmit": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
