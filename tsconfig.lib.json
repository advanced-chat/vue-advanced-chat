{
  "extends": [
    "@vue/tsconfig/tsconfig.json",
    "@vue/tsconfig/tsconfig.lib.json"
  ],
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo",

    "noEmit": true,
    "skipLibCheck": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
